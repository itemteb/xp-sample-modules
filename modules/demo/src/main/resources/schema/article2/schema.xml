<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<type>
  <display-name>Article2</display-name>
  <super-type>system:structured</super-type>
  <is-abstract>false</is-abstract>
  <is-final>false</is-final>
  <is-built-in>false</is-built-in>
  <allow-child-content>true</allow-child-content>
  <form>
    <input name="title" type="TextLine">
      <label>Title</label>
      <immutable>false</immutable>
      <indexed>false</indexed>
      <occurrences minimum="1" maximum="1"/>
      <help-text>Article title</help-text>
    </input>
    <input name="preface" type="TextLine">
      <label>Preface</label>
      <immutable>false</immutable>
      <indexed>false</indexed>
      <occurrences minimum="0" maximum="1"/>
      <help-text>Preface of the article</help-text>
    </input>
    <input name="body" type="TextArea">
      <label>Body</label>
      <immutable>false</immutable>
      <indexed>false</indexed>
      <occurrences minimum="1" maximum="1"/>
      <help-text>Body of the article</help-text>
    </input>
    <form-item-set name="related">
      <items>
        <input name="author" type="TextLine">
          <label>Author</label>
          <immutable>false</immutable>
          <indexed>false</indexed>
          <occurrences minimum="0" maximum="1"/>
        </input>
        <input name="category" type="TextLine">
          <label>Category</label>
          <immutable>false</immutable>
          <indexed>false</indexed>
          <occurrences minimum="0" maximum="1"/>
        </input>
      </items>
      <immutable>false</immutable>
      <occurrences minimum="0" maximum="1"/>
    </form-item-set>
  </form>
</type>

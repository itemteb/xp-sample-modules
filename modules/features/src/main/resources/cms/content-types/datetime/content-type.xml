<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Date Time</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="datetime" type="DateTime">
      <label>DateTime</label>
      <indexed>true</indexed>
      <custom-text>Custom text</custom-text>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <with-timezone>true</with-timezone>
      </config>
      <help-text>..that's the question!</help-text>
    </input>
    <input name="requiredDatetime" type="DateTime">
      <label>Required DateTime</label>
      <indexed>true</indexed>
      <custom-text>Custom text</custom-text>
      <occurrences minimum="1" maximum="0"/>
      <config>
        <with-timezone>true</with-timezone>
      </config>
      <help-text>..that's the question!</help-text>
    </input>
  </form>
</content-type>

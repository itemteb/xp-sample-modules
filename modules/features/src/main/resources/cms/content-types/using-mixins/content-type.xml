<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Using Mixins</display-name>
  <super-type>base:structured</super-type>
  <form>
    <form-item-set name="addresses">
      <label>Addresses</label>
      <items>
        <input name="label" type="TextLine">
          <label>Label</label>
          <occurrences minimum="0" maximum="1"/>
          <help-text>Give this address a label</help-text>
        </input>
        <mixin-reference name="address">
          <reference>com.enonic.wem.modules.features:address</reference>
        </mixin-reference>
        <mixin-reference name="county">
          <reference>com.enonic.wem.modules.features:norwegian-county</reference>
        </mixin-reference>
      </items>
      <occurrences minimum="0" maximum="0"/>
    </form-item-set>
  </form>
</content-type>

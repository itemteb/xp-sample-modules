<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Relationship</display-name>
  <super-type>base:structured</super-type>
  <form>
    <input name="myRelation" type="Relationship">
      <label>A single DEFAULT relation to another content</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myLikeRelation" type="Relationship">
      <label>A single LIKE relation to another content</label>
      <occurrences minimum="0" maximum="1"/>
      <config>
        <relationship-type>system:like</relationship-type>
      </config>
    </input>
    <input name="myUnrequiredUnlimitedRelationship" type="Relationship">
      <label>Unrequired, maximum allowed</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myUnrequiredMax3Relationship" type="Relationship">
      <label>Unrequired, maximum 3</label>
      <occurrences minimum="0" maximum="3"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myRequiredUnlimitedRelationship" type="Relationship">
      <label>Required, maximum allowed relations</label>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myRequiredRelationship" type="Relationship">
      <label>Required, maximum 1</label>
      <occurrences minimum="1" maximum="1"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myRequiredMax2Relationship" type="Relationship">
      <label>Required, maximum 2</label>
      <occurrences minimum="1" maximum="2"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
    <input name="myRequiredMax3Relationship" type="Relationship">
      <label>Required, maximum 3</label>
      <occurrences minimum="1" maximum="3"/>
      <config>
        <relationship-type>system:default</relationship-type>
      </config>
    </input>
  </form>
</content-type>

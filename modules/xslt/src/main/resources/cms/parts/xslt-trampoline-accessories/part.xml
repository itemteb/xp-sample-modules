<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
  <display-name>Trampoline Accessories</display-name>
  <config>
    <input name="background-color" type="TextLine">
      <label>Background color</label>
      <occurrences minimum="0" maximum="0"/>
    </input>
    <input type="ImageSelector" name="image">
      <label>Image Gallery</label>
      <custom-text/>
      <help-text/>
      <occurrences minimum="1" maximum="0"/>
      <config/>
    </input>
    <input type="ContentSelector" name="accessories">
      <label>Accessories</label>
      <custom-text/>
      <help-text/>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <relationship-type>system:reference</relationship-type>
      </config>
    </input>
        <field-set name="variants">
      <label>Trampoline variants</label>
      <items>
        <form-item-set name="variant">
          <label>Variant</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="0" maximum="0"/>
          <items>
            <input type="TextLine" name="id">
              <label>Variant ID</label>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="sku">
              <label>SKU</label>
              <indexed>true</indexed>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="price">
              <label>Price</label>
              <indexed>true</indexed>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="ImageSelector" name="image">
              <label>Variant Image</label>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
              <config/>
            </input>
          </items>
        </form-item-set>
      </items>
    </field-set>
  </config>
</part-component>

<?xml version="1.0" encoding="UTF-8"?>
<content-type>
  <display-name>Trampoline</display-name>
  <content-display-name-script>$('vendor') + ' - ' + $('name')</content-display-name-script>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="basic">
      <label>Basic information</label>
      <items>
        <input type="TextLine" name="vendor">
          <label>Vendor</label>
          <indexed>true</indexed>
          <custom-text/>
          <help-text/>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="TextLine" name="name">
          <label>Product Name</label>
          <indexed>true</indexed>
          <custom-text/>
          <help-text/>
          <occurrences minimum="1" maximum="1"/>
        </input>
        <input type="HtmlArea" name="description">
          <label>Description</label>
          <indexed>true</indexed>
          <custom-text/>
          <help-text/>
          <occurrences minimum="1" maximum="1"/>
        </input>
      </items>
    </field-set>
    <field-set name="details">
      <label>Details</label>
      <items>
        <input type="TextLine" name="features">
          <label>Features</label>
          <indexed>true</indexed>
          <custom-text/>
          <help-text>Provide key selling points</help-text>
          <occurrences minimum="1" maximum="0"/>
        </input>
        <input type="ImageSelector" name="image">
          <label>Image Gallery</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="1" maximum="0"/>
          <config/>
        </input>
      </items>
    </field-set>
    <input type="ContentSelector" name="accessories">
      <label>Accessories</label>
      <custom-text/>
      <help-text/>
      <occurrences minimum="0" maximum="0"/>
      <config>
        <relationship-type>system:reference</relationship-type>
      </config>
    </input>
    <field-set name="variants">
      <label>Trampoline variants</label>
      <items>
        <form-item-set name="variant">
          <label>Variant</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="0" maximum="0"/>
          <items>
            <input type="TextLine" name="id">
              <label>Variant ID</label>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="sku">
              <label>SKU</label>
              <indexed>true</indexed>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="TextLine" name="price">
              <label>Price</label>
              <indexed>true</indexed>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
            </input>
            <input type="ImageSelector" name="image">
              <label>Variant Image</label>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="1"/>
              <config/>
            </input>
          </items>
        </form-item-set>
      </items>
    </field-set>
  </form>
</content-type>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<page-component>
    <display-name>Banner page</display-name>
    <config>
        <input name="meta-keywords" type="TextLine">
            <label>Meta Keywords</label>
            <immutable>false</immutable>
            <indexed>false</indexed>
            <occurrences minimum="0" maximum="0"/>
        </input>
        <input name="meta-description" type="TextLine">
            <label>Meta description</label>
            <immutable>false</immutable>
            <indexed>false</indexed>
            <occurrences minimum="0" maximum="1"/>
        </input>
        <field-set name="slides"> 
          <label>Banner slides</label>
          <items>
            <form-item-set name="slide">
              <label>Slide</label>
              <immutable>false</immutable>
              <custom-text/>
              <help-text/>
              <occurrences minimum="1" maximum="0"/>
              <items>
                <input type="TextLine" name="header">
                  <label>Header</label>
                  <immutable>false</immutable>
                  <indexed>false</indexed>
                  <custom-text/>
                  <help-text/>
                  <occurrences minimum="1" maximum="1"/>
              </input>
              <input type="TextLine" name="subtitle">
                  <label>Subtitle</label>
                  <immutable>false</immutable>
                  <indexed>true</indexed>
                  <custom-text/>
                  <help-text/>
                  <occurrences minimum="1" maximum="1"/>
              </input>
          </items>
      </form-item-set>
  </items>
</field-set>
</config>
<regions>
    <region name="main"/>
</regions>
</page-component>

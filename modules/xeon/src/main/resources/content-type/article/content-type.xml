<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<content-type>
  <display-name>Article</display-name>
  <super-type>base:structured</super-type>
  <form>
    <field-set name="article">
      <label>Article</label>
      <items>
        <input name="shorttitle" type="TextLine">
          <label>Short title</label>
          <occurrences minimum="1" maximum="1"/>
          <help-text>Article short title</help-text>
        </input>
        <input type="ImageSelector" name="teaserimage">
          <label>Teaser image</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="1" maximum="1"/>
          <config>
            <relationship-type>system:related-image</relationship-type>
          </config>
        </input>
        <input name="teaser" type="TextArea">
          <label>Teaser</label>
          <occurrences minimum="1" maximum="1"/>
          <help-text>Article teaser</help-text>
        </input>
        <input type="ImageSelector" name="mainimage">
          <label>Main image</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="0" maximum="0"/>
          <config>
            <relationship-type>system:related-image</relationship-type>
          </config>
        </input>
        <input name="body" type="HtmlArea">
          <label>Body</label>
          <occurrences minimum="1" maximum="1"/>
          <help-text>Body of the article</help-text>
        </input>
        <input name="tags" type="Tag">
          <label>Tags</label>
          <occurrences minimum="1" maximum="0"/>
        </input>
      </items>
    </field-set>

    <field-set name="about">
      <label>About</label>
      <items>
        <input type="Relationship" name="author">
          <label>Author</label>
          <custom-text/>
          <help-text/>
          <occurrences minimum="0" maximum="0"/>
          <config>
            <relationship-type>com.enonic.wem.modules.xeon:related-person</relationship-type>
          </config>
        </input>
        <input name="facts" type="TextLine">
          <label>Facts</label>
          <occurrences minimum="0" maximum="0"/>
          <help-text>Article short title</help-text>
        </input>
      </items>
    </field-set>
  </form>
</content-type>

<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<part-component>
    <display-name>Pricing</display-name>
    <config>
        <field-set name="slides">
            <label>Price plans</label>
            <items>
                <form-item-set name="slide">
                    <label>Price plan</label>
                    <custom-text/>
                    <help-text/>
                    <occurrences minimum="3" maximum="3"/>
                    <items>
                        <input type="TextLine" name="name">
                            <label>Name</label>
                            <custom-text/>
                            <help-text/>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input type="Checkbox" name="featured">
                            <label>Featured</label>
                            <custom-text/>
                            <help-text>true or false</help-text>
                            <occurrences minimum="0" maximum="1"/>
                        </input>
                        <input type="TextLine" name="price">
                            <label>Price</label>
                            <custom-text/>
                            <help-text/>
                            <occurrences minimum="1" maximum="1"/>
                        </input>
                        <input type="TextLine" name="features">
                            <label>Features</label>
                            <indexed>true</indexed>
                            <custom-text/>
                            <help-text/>
                            <occurrences minimum="0" maximum="0"/>
                        </input>
                    </items>
                </form-item-set>
            </items>
        </field-set>
    </config>
</part-component>
